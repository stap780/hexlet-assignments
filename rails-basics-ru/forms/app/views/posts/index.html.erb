<h1>Posts</h1>
<p><%= link_to "Создать post", new_post_path %></p>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th>summary</th>
      <th>published</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td><%= post.summary %></td>
        <td><%= post.summary %></td>
        <td>
          <%= link_to "Edit", edit_post_path(post) %>
          <%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>