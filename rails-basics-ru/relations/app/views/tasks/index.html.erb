<div>Tasks</div>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each_with_index do |task, i| %>
      <tr>
        <td> <%=i + 1%><td>
        <td><%= task.name%></td>
        <td><%= task.description%></td>
        <td><%= task.user&.name%></td>
        <td><%= task.status&.name%></td>
        <td>
          <%= link_to 'Show', task%>
          <%= link_to 'Edit', edit_task_path(task)%>
          <%= link_to 'Destroy', task, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: ''%>
        </td>
      </tr>
      <% end %>
  </tbody>
  </table>
